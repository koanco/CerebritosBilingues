<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="40dp"
    android:orientation="vertical"
    android:background="@color/wallpaper"
    android:id="@+id/lPadre"

    tools:context="johannpolania.com.cerebritosbilingues.ReadJobsActivity"
    android:weightSum="1">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/seleccion_profesion"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:id="@+id/tWord"
        android:gravity="center"
        android:layout_x="5dp"
        android:layout_y="2dp" />


    <LinearLayout
        android:layout_width="106dp"
        android:layout_height="109dp"
        android:orientation="vertical"
        android:id="@+id/lprincipal"
        android:gravity="center"

        android:background="@drawable/fondo"
        android:padding="10dp"
         android:paddingTop="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"

        >





    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="40dp"


        android:layout_marginTop="40dp"
        >




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="134dp"
        android:id="@+id/layout1"



        >
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="134dp"
        android:id="@+id/layout2"




        >
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="134dp"
        android:id="@+id/layout3"

        >







    </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/layoutSonido"
        android:layout_gravity="center"
        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/music"
            android:onClick="reproducir"
            android:background="#0fffffff"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gato_fallo"
            android:id="@+id/falloJobs"
            android:visibility="invisible"
            />



    </LinearLayout>

</LinearLayout>
