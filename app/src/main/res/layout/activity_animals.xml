<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="johannpolania.com.cerebritosbilingues.AnimalsActivity"
    android:orientation="vertical"
    android:id="@+id/lPadreAnimales"
    android:background="@color/wallpaper"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/seleccion_profesion"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:id="@+id/tWordAnimales"
        android:gravity="center"
        android:layout_x="5dp"
        android:layout_y="2dp" />


    <LinearLayout
        android:layout_width="106dp"
        android:layout_height="109dp"
        android:orientation="vertical"
        android:id="@+id/lprincipalAnimales"
        android:gravity="center"

        android:background="@drawable/fondo_animales"
        android:padding="10dp"
        android:paddingTop="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"

        >





    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="40dp"


        android:layout_marginTop="40dp"
        >




        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="134dp"
            android:id="@+id/layout1Animales"



            >
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="134dp"
            android:id="@+id/layout2Animales"




            >
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="134dp"
            android:id="@+id/layout3Animales"

            >







        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/layoutSonidoAnimales"
        android:layout_gravity="center"
        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/music"
            android:onClick="reproducir"
            android:background="#0fffffff"
            android:layout_gravity="center_horizontal" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gato_fallo"
            android:id="@+id/falloAnimals"
            android:visibility="invisible"
            />



    </LinearLayout>





</LinearLayout>
